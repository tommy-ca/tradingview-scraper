{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TradingView Scraper Workflow Manifest",
  "type": "object",
  "properties": {
    "default_profile": {
      "type": "string",
      "default": "production"
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/profile"
      }
    }
  },
  "required": ["profiles"],
  "definitions": {
    "profile": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "data": {
          "type": "object",
          "properties": {
            "lookback_days": { "type": "integer", "minimum": 1 },
            "batch_size": { "type": "integer", "minimum": 1 },
            "backfill": { "type": "boolean" },
            "gapfill": { "type": "boolean" },
            "max_symbols": { "type": "integer", "minimum": 1 }
          }
        },
        "selection": {
          "type": "object",
          "properties": {
            "top_n": { "type": "integer", "minimum": 1 },
            "threshold": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "risk": {
          "type": "object",
          "properties": {
            "cluster_cap": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "backtest": {
          "type": "object",
          "properties": {
            "train_window": { "type": "integer", "minimum": 1 },
            "test_window": { "type": "integer", "minimum": 1 },
            "step_size": { "type": "integer", "minimum": 1 }
          }
        },
        "tournament": {
          "type": "object",
          "properties": {
            "engines": { "type": "string" },
            "profiles": { "type": "string" }
          }
        },
        "discovery": {
          "type": "object",
          "properties": {
            "enabled_markets": {
              "type": "array",
              "items": { "type": "string", "enum": ["futures", "crypto", "cfd", "forex", "bonds", "etf"] }
            },
            "futures": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "adx_threshold": { "type": "number", "minimum": 0 },
                "volume_min": { "type": "integer", "minimum": 0 },
                "momentum_lookback": { "type": "string" }
              }
            },
            "crypto": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "market_cap_min": { "type": "number", "minimum": 0 },
                "batch_size": { "type": "integer", "minimum": 1 }
              }
            }
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    }
  }
}
