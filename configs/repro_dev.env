# Usage: make daily-run MANIFEST=configs/repro_dev.env

# Workflow Scoping
TV_RUN_ID=repro-dev-run

# Discovery & Prep
PORTFOLIO_BATCH_SIZE=10
PORTFOLIO_LOOKBACK_DAYS=40
PORTFOLIO_BACKFILL=1
PORTFOLIO_GAPFILL=1
PORTFOLIO_MAX_SYMBOLS=50

# Metadata
META_REFRESH=0
META_AUDIT=0

# Selection Logic
TOP_N=2
THRESHOLD=0.5

# Optimization
CLUSTER_CAP=0.25

# Backtest Defaults
BACKTEST_TRAIN=30
BACKTEST_TEST=10
BACKTEST_STEP=10

# Tournament Defaults
TOURNAMENT_ENGINES=custom
TOURNAMENT_PROFILES=min_variance,hrp

